<% let data ={css:["css/myAccount.css","css/navBar.css", "css/navBarMobile.css"],
             jsfile:["./js/darkModeScript.js"],
             titulo: "My account"}%>

<%- include('../partials/head', data)%>

<body>

    <%- include('../partials/navBar') %>
    <%- include('../partials/navBarMobile') %>

    <main>
        <!--Sección superior-->
        <section class="userHead">
            <h3>Mi cuenta</h3>
            <div class="user-head">
                <i class="fas fa-user"></i>
            </div>
        </section>

        <!--Botones de categorias principales-->
        <section class="important-buttons">
            <% botonesPrincipales.categoriasDeBotonesMyAccount.forEach(boton => { %>
                <%- include('../partials/importantButtons', boton) %>
            <% }) %>
        </section>

        <section class="body">
            <h3>Mis pedidos</h3>
        </section>

        <section class="body">
            <h3>Mis favoritos</h3>
        </section>

        <section class="body">
            <h3>Comprar de nuevo</h3>
        </section>

        <section class="body">
            <h3>Mis direcciones</h3>
        </section>

        <!--Banner promocional-->
        <%- include('../partials/promotionalBanner')%>

        <!--Separador bonito -->
        <%- include('../partials/separador') %>

        <!--Botón que retorna al incio de la página -->
        <%- include('../partials/botonAInicio') %>

    </main>

    <%- include('../partials/footer') %>
</body>
</html>
