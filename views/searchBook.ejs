<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="apple-touch-icon" sizes="180x180" href="./images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="./images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="./images/favicon/favicon-16x16.png">
    <link rel="manifest" href="./images/favicon/site.webmanifest">
    <link rel="mask-icon" href="./images/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400&family=Russo+One&display=swap"
        rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="css/flaticon/flaticon.css">
    <link rel="stylesheet" href="css/normalize.min.css" />
    <link rel="stylesheet" href="css/searchBook.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    
    <script defer src="./js/darkModeScript.js"></script>
    <script defer src="./js/asideSubcategoryBooks.js"></script>
    <title>Search Book - InsideBooks</title>
</head>

<body>
    <nav>
        <a href="./home">
            <div class="logoNavBar">
                <div class="logoContainer">
                    <div class="bloqueAzul"></div>
                    <div class="bloqueVerde"></div>
                    <div class="bloqueRojo"></div>
                    <div class="bloqueNaranja"></div>
                </div>
                <p class="logoText">
                    <span class="rojo">IN</span><span class="azul">SIDE</span><span class="verde">BOOKS</span>
                </p>
            </div>
        </a>

        <form class="searchBar" action="./searchBook">
            <input class="btn" type="text" placeholder=" Buscar.." name="search">
            <button class="btn red" type="submit"><i class="flaticon-magnifying-glass-1"></i></button>
        </form>

        <div class="menuButton">
            <a href="./login"><i class="flaticon-profile-user"></i> &nbsp <span class="menu-label"> Mi Cuenta</span> </a>
            <a href="./carrito"><i class="flaticon-shopping-cart"></i> &nbsp <span class="menu-label"> Mi
                Carrito</span></a>
            <a href="#" onclick="openNav()"><i class="flaticon-list"></i> &nbsp <span class="menu-label">
                Menú</span> </a>
            <div class="mySidenav" id="sideNav">
                <div class="mySidenavlinks">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                    <div>
                        <input style="display: none;" type="checkbox" id="darkMode">
                        <label for="darkMode">
                            <span id="textoModoClaro"><i class="far fa-moon"></i>&nbsp Modo Oscuro</span> 
                            <span id="textoModoOscuro"> <i class="fas fa-sun"></i> &nbsp Modo Claro</span>
                        </label>
                    </div>
                    <a href="#">Link 2</a>
                    <a href="#">Link 3</a>
                </div>
            </div>
        </div>
    </nav>
  
    <!--Barra de navegación para móviles-->
    <%- include('./partials/navBarMobile') %>

    <!--Banner promocional con animaciones-->
    <%- include('./partials/sliderStartBanner') %>

    <main>
        <div class="sectionChange">
            
            <!--Categoria de libros-->
            <div class="imp-buttons-hidden">
                <section class="important-buttons" id="important-buttons-pc">
                    <% categorias.categoriasDeBotones.forEach((boton,n) => { %>
                        <% boton.n = n %>
                        <%- include('./partials/categoryButtons', boton) %>
                    <% }) %>
                </section>
            </div>

            <div class="sideBarVer, sideBarPC" id="sideBarVer">
                <aside id="subjects">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeBarVer()"> &times cerrar</a>
                    <div class="index" id="indexFirst">
                        <%- include('./partials/mainCategoryAside',categorias) %>
                    </div>
                    <div class="index">
                        <h3>Libros por Idioma</h3>
                        <ul class="idiomBooks">
                            <li>
                                <a href="#">
                                    <label><input type="checkbox" name="idioma" value="ingles" checked> Inglés</label>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <label><input type="checkbox" name="idioma" id="idioma" value="español"> Español</label>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <label><input type="checkbox" name="idioma" id="idioma" value="frances"> Francés</label>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <label><input type="checkbox" name="idioma" id="idioma" value="Italiano"> Italiano</label>
                                </a>
                            </li>
                        </ul>
                    </div>
            
                        <div class="index">
                            <h3>Libros por Formato</h3>
                            <ul class="formatBooks">
                                <li>
                                    <a href="#">
                                        <label><input type="checkbox" name="formato" id="formato" value="ebook" checked> Ebooks</label>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <label><input type="checkbox" name="formato" id="formato" value="blanda"> Pasta blanda</label>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <label><input type="checkbox" name="formato" id="formato" value="dura"> Pasta dura</label>
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <div class="index">
                            <h3>Promociones</h3>
                            <ul class="formatBooks">
                                <li>
                                    <a href="#">
                                        <label><input type="checkbox" name="promociones" id="promociones" value="promociones" checked> Promociones</label>
                                    </a>
                                </li>
                            </ul>
                        </div>
            
                        <div class="index">
                            <h3>Opinión de los clientes</h3>
                            <div class="calificacionComentario" id="first">
                                <p class=calificacion>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                </p>
                                <p class="tituloComentario">o más</p>
                            </div>
                            <div class="calificacionComentario">
                                <p class=calificacion>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </p>
                                <p class="tituloComentario">o más</p>
                            </div>
                            <div class="calificacionComentario">
                                <p class=calificacion>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </p>
                                <p class="tituloComentario">o más</p>
                            </div>
                            <div class="calificacionComentario">
                                <p class=calificacion>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </p>
                                <p class="tituloComentario">o más</p>
                            </div>
                        </div>
                        <div class="index">
                            <h3>Precio</h3>
                            <ul class="priceBooks">
                                <li><a href="">Hasta $50</a></li>
                                <li><a href="">$50 a $100</a></li>
                                <li><a href="">$100 a $200</a></li>
                                <li><a href="">$200 a $300</a></li>
                                <li><a href="">$300 a $500</a></li>
                                <li><a href="">$500 a más</a></li>
                            </ul>
                        </div>
                </aside>
                
            </div>

            <!--Resultado de la búsqueda-->
            <div class="show-filter">
                <a href="#" onclick="openBarVer()"> &nbsp
                    Filtrar búsqueda </a>
            </div>
            <!--Resultados de la búsqueda-->
            <%- include('./partials/section', seccion.resultados) %>
            
        </div>

        <!--Banner promocional-->
        <%- include('./partials/promotionalBanner')%> 

        <!--Lo más nuevo-->
        <%- include('./partials/section', seccion.nuevos) %>

        <!--Libros electrónicos-->
        <%- include('./partials/section', seccion.ebooks) %>

        <!--Separador bonito -->
        <%- include('./partials/separador') %>    

        <!--Botón que retorna al incio de la página -->
        <%- include('./partials/botonAInicio') %>
    </main>

<%- include('./partials/footer') %>
</body>
</html>
