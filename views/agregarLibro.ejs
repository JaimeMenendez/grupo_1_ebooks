<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="css/flaticon/flaticon.css">
    <link rel="stylesheet" href="css/agregarLibro.css">
    <script defer src="./js/darkModeScript.js"></script>
    <script src="https://cdn.tiny.cloud/1/3c54177q3lh311521ar9zn5r80ehbssagbubwkxw3apnsps3/tinymce/5/tinymce.min.js"
        referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea'
        });

    </script>
    <title>Agregar nuevo libro</title>
</head>

<body>

    <%- include('./partials/navBar') %>

    <h1 class="pageTitle"><i class="fas fa-folder-plus"></i>&nbsp Agregar Libro</h1>


    <form class="addBooks" action="/producto/agregarLibro" method="POST" enctype="multipart/form-data">
        <div class="portadaDiv">
            <img src="" alt="portada" id="portadaImg">

            <div class="uploadFile">
                <input type="file" id="portada" name="portada" accept="image/*" multiple=false
                    onchange="loadFile(event)" class="inputfile">
                <label for="portada" class="btn red"><i class="fas fa-upload"></i>&nbsp Subir Portada </label>
            </div>
        </div>

        <label>Título:<input class="textInput" type="text" name="nombre"></label>
        <label>Materia: <input id="materia" class="textInput" type="text" name="materia"></label>
        <label>Autor: <input class="textInput" id="autor" type="text" name="autor"></label>
        <label>Editorial:<input class="textInput" id="editorial" type="text" name="editorial"> </label>
        <label>ISBN:<input class="textInput" id="isnb" type="text" name="isbn"></label>

        <script>
            let loadFile = function (event) {
                let output = document.getElementById('portadaImg');
                let label = document.querySelector('.uploadFile label')

                output.src = URL.createObjectURL(event.target.files[0]);
                label.innerHTML = event.target.files[0].name
                output.onload = function () {
                    URL.revokeObjectURL(output.src)
                }
            };
        </script>

        <label>Idioma:
            <select name="idioma" id="idioma">
                <option value="Inglés" selected>Inglés</option>
                <option value="Español">Español</option>
                <option value="Francés">Francés</option>
                <option value="Italiano">Italiano</option>
            </select>
        </label>


        <label>Precio del libro físico: <input id="precioBook" type="number" min="0" step="0.01"
                name="precioBook"></label>
        <label>Precio del ebook: <input id="preciEBook" type="number" min="0" step="0.01" name="precioEbook"></label>


        <label>Número de Páginas: <input type="number" id="paginas" name="paginas"></label>
        <label>Año:<input type="number" id="year" min="1980" max="2021" step="1" name="year"></label>


        <div class="librosDetails">
            <h2>Acerca de este libro</h2>
            <textarea id="detallesLibro" name="detallesDelLibro">
          </textarea>
        </div>

        <div class="autorDetails">
            <h2>Acerca del autor</h2>
            <textarea id="detallesAutor" name="detallesAutor">
          </textarea>
        </div>

        <div class="botones">
            <input type="submit" class="btn agregar" value="Agregar libro">
            <input type="reset" class="btn red borrar" value="Borrar campos">
        </div>

    </form>

<%- include('./partials/footer') %>

</body>

</html>
